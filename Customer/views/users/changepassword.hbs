<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Thay đổi mật khẩu</h1>
            </div>
        </div>
    </div>
</section>
<section class="login_box_area section_gap">
    <div class="container">
        <div class="col-sm-6 col-sm-offset-3">
            <form action="/changepassword" method="post">
                <div class="form-group">
                    <label for="password">Mật khẩu cũ</label>
                    <input type="password" id="oldpassword" name="oldpassword" minlength="6" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="password">Mật khẩu mới</label>
                    <input type="password" id="newpassword" name="newpassword" class="form-control" minlength="6"  required>
                </div>
                <div class="form-group">
                    <label for="password">Nhập lại mật khẩu</label>
                    <input type="password" id="confpassword" name="confpassword" class="form-control" minlength="6"  required>
                </div>
                
                <p style="color: red;">{{message}}</p>
                <button type="submit" class="btn btn-warning btn-lg">Thay đổi</button>
            </form>
            <hr>
            <p>Quay lại <a href="/">trang chủ</a>.</p>
        </div>
    </div>
</section>